{
  "name": "jupyter-cluster-connector",
  "displayName": "Jupyter Cluster Connector",
  "description": "Connect to JupyterHub-managed Kubernetes pods via CILogon authentication",
  "version": "0.1.0",
  "publisher": "purdue-af",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:jupyterCluster.connect"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jupyterCluster.connect",
        "title": "Connect to Jupyter Cluster",
        "category": "Jupyter Cluster"
      },
      {
        "command": "jupyterCluster.disconnect",
        "title": "Disconnect from Jupyter Cluster",
        "category": "Jupyter Cluster"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "jupyterCluster.connect",
          "when": "!jupyterCluster.connected"
        },
        {
          "command": "jupyterCluster.disconnect",
          "when": "jupyterCluster.connected"
        }
      ]
    },
    "configuration": {
      "title": "Jupyter Cluster Connector",
      "properties": {
        "jupyterCluster.brokerUrl": {
          "type": "string",
          "default": "https://broker.example.org",
          "description": "URL of the broker service"
        },
        "jupyterCluster.autoConnect": {
          "type": "boolean",
          "default": false,
          "description": "Automatically connect on startup"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "ws": "^8.14.0",
    "express": "^4.18.0",
    "@types/ws": "^8.5.0",
    "@types/express": "^4.17.0"
  }
}
