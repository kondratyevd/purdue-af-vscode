{
  "name": "purdue-af",
  "displayName": "Purdue AF",
  "description": "Connect to JupyterHub-managed Kubernetes pods via CILogon authentication",
  "version": "0.1.0",
  "publisher": "purdue-af",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:purdueAf.connect"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "purdueAf.connect",
        "title": "Connect to Purdue AF",
        "category": "Purdue AF"
      },
      {
        "command": "purdueAf.disconnect",
        "title": "Disconnect from Purdue AF",
        "category": "Purdue AF"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "purdueAf.connect",
          "when": "!purdueAf.connected"
        },
        {
          "command": "purdueAf.disconnect",
          "when": "purdueAf.connected"
        }
      ]
    },
    "configuration": {
      "title": "Purdue AF",
      "properties": {
        "purdueAf.brokerUrl": {
          "type": "string",
          "default": "http://localhost:8083",
          "description": "URL of the broker service"
        },
        "purdueAf.autoConnect": {
          "type": "boolean",
          "default": false,
          "description": "Automatically connect on startup"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.32.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "vsce": "^1.95.0"
  },
  "dependencies": {
    "@types/express": "^4.17.0",
    "@types/ws": "^8.5.0",
    "axios": "^1.6.0",
    "express": "^4.18.0",
    "node-fetch": "^3.3.2",
    "ws": "^8.14.0"
  }
}
